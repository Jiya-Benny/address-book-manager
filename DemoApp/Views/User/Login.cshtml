@{
    ViewData["Title"] = "Login";
}

@model DemoApp.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>

        .login-container {
            justify-content: center;
            width: 75%;
            padding-bottom: 25px;
            padding-left: 60px;
            padding-right: 60px;
            margin-top: 100px; /* Set a max width for the form */
            margin-left: 150px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 6px 6px 6px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 20px;
                margin-top: 70px;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        @Html.ValidationSummary(false, "", new { @class = "text-danger text-center" })
        <form method="post">
            <div class="form-group">
                <label class="">Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-block w-25">Login</button>
            </div>
            <div class="d-flex justify-content-center">
                <p>New User?</p><a class="link-dark" href="@Url.Action("Register", "User")">Register here</a>
            </div>
        </form>
    </div>
</body>
</html>
