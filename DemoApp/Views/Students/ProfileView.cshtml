@{
    ViewData["Title"] = "Profile";
}

@model DemoApp.Models.Entities.Student

@if (Model != null)
{
    @* <h2>@Model.Name</h2>
    <p>@Model.UserRegister?.UserName</p>  <!-- Use null-conditional operator --> *@
    <div class="container mt-5">
        <h2>User Profile</h2>

        <div class="card">
            <div class="card-header">
                <h4>@Model.Name's Profile</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">User ID</dt>
                    <dd class="col-sm-9">@Model.UserId</dd>

                    <dt class="col-sm-3">User Name</dt>
                    <dd class="col-sm-9">@Model.UserRegister.UserName</dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Phone</dt>
                    <dd class="col-sm-9">@Model.Phone</dd>

                    <dt class="col-sm-3">Date Of Birth</dt>
                    <dd class="col-sm-9">@Model.DateOfBirth</dd>

                    <dt class="col-sm-3">Gender</dt>
                    <dd class="col-sm-9">@Model.Gender</dd>

                    <dt class="col-sm-3">State</dt>
                    <dd class="col-sm-9">@Model.State</dd>

                    <dt class="col-sm-3">Country</dt>
                    <dd class="col-sm-9">@Model.Country</dd>
                </dl>

                <div class="text-center mt-4">
                    <a href="@Url.Action("List", "Students")" class="btn btn-secondary">Back to Student List</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>No student found.</p>
}



